#!/usr/bin/env bash

volp="$(pamixer --get-volume)"
cores="$(grep -c "^processor" /proc/cpuinfo)"
#cores="$(sysctl -n hw.ncpu)" # BSD
cpu="$(ps aux | awk 'BEGIN {sum=0} {sum+=$3}; END {print sum}')"
cpu="$((${cpu/\.*} / ${cores:-1}))"
[[ $(pamixer --get-mute) == true ]] && vols='M ' || vols=''
wireless="$(grep '^\s*w' /proc/net/wireless)"



:<<'comment'
bat_status=""
del_tmp=""
for bat in  /sys/class/power_supply/BAT*
do
	bats="$(cat $bat/status)"
	batp="$(cat $bat/capacity)"

	if [ $bats == 'Fully' ] ; then
		bats=''
	else
		if [ $bats == 'Charging' ] ; then
		   bats=''
		else
			if [ $batp -le 20 ] ; then
				bats=''
			elif [ $batp -le 40 ] ; then
				bats=''
			elif [ $batp -le 60 ] ; then
				bats=''
			elif [ $batp -le 80 ] ; then
				bats=''
			else
				bats=''
			fi
		fi
		bats="$bats $batp%"
	fi
	bat_status+="$del_tmp$bats"
	del_tmp=" "
done
comment



acpi_inf=$(acpi | head -n 1)
batinf=$(echo "$acpi_inf" | cut -d : -f 2 | tr -d ' ' | tr '[:upper:]' '[:lower:]')
# batp="$(upower -i /org/freedesktop/UPower/devices/battery_BAT1 | sed '/ignored/d' | grep percentage | sed 's/[[:space:]]\+.*[[:space:]]\+//;s/%//')"
batp=$(echo "$batinf" | cut -d , -f 2)
# bat_status="$(upower -i /org/freedesktop/UPower/devices/battery_BAT1 | grep state | sed 's/[[:space:]]\+.*[[:space:]]\+//')"
bat_status=$(echo "$batinf" | cut -d , -f 1)
bat_info=''

if [[ $batp != '' ]] ; then
	if [[ $bat_status == 'notcharging' ]] ; then
		# bat_status=''
		bat_info='F'
	else
		if [[ $bat_status == 'charging' ]] ; then
		   # bat_status=''
		   bat_info="C $batp"
		else
#			if [[ $batp -le 20 ]] ; then
#				bat_status=''
#			elif [[ $batp -le 40 ]] ; then
#				bat_status=''
#			elif [[ $batp -le 60 ]] ; then
#				bat_status=''
#			elif [[ $batp -le 80 ]] ; then
#				bat_status=''
#			else
#				bat_status=''
#			fi
			bat_info=$batp
		fi
		# bat_status="$bat_status $batp%"
		bat_status="$bat_status $batp"
	fi
fi

acpi_inf=$(echo "$acpi_inf" | grep remaining)

if ! [[ -z "$acpi_inf" ]]
then
	r=$(echo "$acpi_inf" | cut -d ' ' -f 5)
	bat_info="$bat_info $r"
fi



todos="$(cat ~/.todo 2>/dev/null | wc -l)"



feeds=$(LC_ALL=C awk -F '\t' '
# URL file: amount of fields is 1.
NF == 1 {
	u[$0] = 1; # lookup table of URLs.
	next;
}
# feed file: check by URL or id.
{
	total++;
	if (length($3)) {
		if (u[$3])
			read++;
	} else if (length($6)) {
		if (u[$6])
			read++;
	}
}
END {
	print (total - read);
}' ~/.sfeed/urls ~/.sfeed/feeds/*)

cmus=$(plctrl statusbar)


fan_info=""

# if systemctl is-active awcc_autoboost.service >/dev/null
if pgrep awcc_autoboost >/dev/null
then
	mode_info=$(cat /var/run/awcc/m)
	cpu_info="$(cat /var/run/awcc/ct)$(cat /var/run/awcc/cb):$(cat /var/run/awcc/cr)"
	gpu_info="$(cat /var/run/awcc/gt)$(cat /var/run/awcc/gb):$(cat /var/run/awcc/gr)"
	fan_info="$cpu_info$mode_info$gpu_info"
else
	cpu_info=$(sensors dell_ddv-virtual-0 | grep 'CPU:' | sed 's/\s\+/ /g' | cut -f 2 -d ' ')
	gpu_info=$(sensors dell_ddv-virtual-0 | grep 'Video:' | sed 's/\s\+/ /g' | cut -f 2 -d ' ')
	fan_info="$cpu_info $gpu_info"
fi



# nspawn_info=$(machinectl list | grep container | cut -f 1 -d ' ' | sort | paste -s -d ',')

nspawn_info=$(machinectl list | grep container | cut -f 1 -d ' ' | sort | while read m; do cat /usr/local/etc/nspawn/labels | \grep -Fq "$m" && ( cat /usr/local/etc/nspawn/labels | \grep -F "$m" | cut -f 2 -d ' ' ) || echo "$m"; done | paste -s -d '')
nspawn_info="$nspawn_info "

browser_procs=$(ps x --user gaspar | grep -F '/usr/bin/python3 /usr/bin/qutebrowser' | head -n -1)
browsers=""

echo "$browser_procs" | grep -q "/usr/bin/python3 /usr/bin/qutebrowser$" && browsers="${browsers}b\n"
echo "$browser_procs" | grep -Fq "/usr/bin/python3 /usr/bin/qutebrowser --qt-arg name scratchqb " && browsers="${browsers}B\n"
echo "$browser_procs" | grep -Fq "/usr/bin/python3 /usr/bin/qutebrowser --qt-arg name scratchqbg " && browsers="${browsers}G\n"
echo "$browser_procs" | grep -Fq "/usr/bin/python3 /usr/bin/qutebrowser --qt-arg name scratchqbw " && browsers="${browsers}W\n"
echo "$browser_procs" | grep -Fq "/usr/bin/python3 /usr/bin/qutebrowser --qt-arg name scratchtmpqb " && browsers="${browsers}T\n"

s="|"
[[ $cmus != '' ]] && s="$s $cmus |"
# s="$s $vols $volp% |"
s="$s $vols$volp |"
if [[ "$browsers" != '' ]]
then
	browsers=$(echo -en "$browsers" | paste -s -d '')
	s="$s $browsers |"
fi
[[ $nspawn_info != '' ]] && s="$s $nspawn_info |"
s="$s $fan_info |"
# s="$s  $cpu% |"
# s="$s  $(free -h | awk '/^Mem:/ {print $3}') |"
s="$s $cpu%$(free -h | awk '/^Mem:/ {print $3}')$(nvidia-smi --query-gpu=pstate --format=csv,noheader) |"
[[ $wireless != '' ]] && s="$s W |"
# [[ $batp != '' ]] && s="$s $bat_status |"
[[ $batp != '' ]] && s="$s $bat_info |"
# s="$s $(date +' %m%d%u:%H%M') |"
s="$s $(date +'%d')$(( 1 + $(date +'%w') ))$(date +'%m:%H%M') |"

if compgen -G "/tmp/*_MOUNTED" > /dev/null
then
	s="$s $(ls -1 /tmp/*_MOUNTED | \sed 's#^.*/##' | cut -c-1 | paste -s -d ',') |"
fi

# [[ $feeds != '' && $feeds != 0 ]] && s="$s  $feeds |"
[[ $feeds != '' && $feeds != 0 ]] && s="$s $feeds |"
# s="$s  $(kbd get) |"
s="$s $(kbd get | tr '[:lower:]' '[:upper:]') |"
[[ $todos != 0 ]] && s="$s T $todos |"
[ -f ~/.local/tmp/sfu ] && s="$s F |"

xsetroot -name "$s"
