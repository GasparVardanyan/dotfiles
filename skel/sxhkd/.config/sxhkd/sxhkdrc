super + e
	emo

super + a
	magick -size 1x1 canvas:white .local/tmp/lightscreen.png; feh --zoom fill -F .local/tmp/lightscreen.png

super + shift + a
	magick -size 1x1 canvas:black .local/tmp/darkscreen.png; feh --zoom fill -F .local/tmp/darkscreen.png

super + ctrl + shift + s
	terminal login
